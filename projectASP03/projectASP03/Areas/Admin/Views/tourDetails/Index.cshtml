    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.transport)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hotel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amountOfPeople)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.childUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.childAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tour.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id , tourID = item.tourID })
        </td>
    </tr>
}

</table>
